<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Product</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
      </head>
<body>
    <%- include('partials/_navbar') %> <br/>

    <div class="col-8">
        <h1>Edit Product</h1>
        <h2>Car Name : <%= products.name %></h2>

     </div>

     
     <form action="" method="post">

        <div class="form-group">
            <label for="CarName">Car Name :</label>
            <input type="text" name="name" class="form-control" id="inputName"  value="<%= products.name %>">
          </div> <br>

          <div class="form-group">
            <label for="price">Price :</label>
            <input type="number" name="price" class="form-control" id="inputPrice"  value="<%= products.price %>">
          </div> <br>

          <div class="form-group">
            <label for="fuelType">Fuel Type</label>
            <select class="form-control" id="exampleFormControlSelect1" name="fuelType">
                <% ["Bensin", "Diesel"].forEach(el => { %>
                    <option value="<%= el %>" <%= products.fuelType === el ? "selected" : '' %>><%= el %></option>
                <% }) %>
            </select>
          </div> <br>

          <div class="form-group">
            <label for="transmissionType">Transmission Type</label>
            <select class="form-control" id="exampleFormControlSelect1" name="transmissionType">
                <% ["Automatic", "Manual"].forEach(el => { %>
                    <option value="<%= el %>" <%= products.transmissionType === el ? "selected" : '' %>><%= el %></option>
                <% }) %>            </select>
          </div> <br>

          <div class="form-group">
            <label for="carImage">Car Image :</label>
            <input type="text" name="carImage" class="form-control" id="inputName"  value=<%= products.carImage %>>
          </div> <br>

          <div class="form-group">
            <label for="description">Car Description :</label>
            <input type="text" name="description" class="form-control" id="inputName"  value=<%= products.description %>>
          </div> <br>


          <div class="form-group">
            <label for="category">Car Type</label>
            <select class="form-control" id="exampleFormControlSelect1" name="CategoryId">
                <% categories.forEach(el => { %>
                     <option value="<%= el.id %>" <%= products.CategoryId === el.id ? "selected" : '' %>><%= el.name %></option>
               <% }) %>
                   

            </select>
          </div> <br>

          <button type="submit" class="btn btn-primary">Submit</button>


    </form>





