<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('partials/_navbarCustomer') %> <br/>
    
    <form action="/product" method="GET">
        <input type="text" placeholder="Search.." name="search" value="<%= search || '' %>">
        <button type="submit">Submit</button>
      </form>
    <table style="width: auto;" class="table table-striped table-condensed">
      <thead>
        <tr>
          <th style="padding: 10px 20px;" scope="col">Image</th>
          <th style="padding: 10px 20px;" scope="col">Name</th>
          <th style="padding: 10px 20px;" scope="col">Price</th>
          <th style="padding: 10px 20px;" scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% product.forEach(el=> { %>
            <tr>
                <td style="padding: 10px 20px;">
                  <img style= "float: left; height: 200px;"src="<%= el.carImage %>" alt="">
                </td>
                <td style="padding: 10px 20px;">
                  <%= el.name %>
                </td>
                <td style="padding: 10px 20px;">
                  <%= formatToRupiah(el.price) %>
                </td>
            <td style="padding: 10px 20px;">
              <a style="margin-right: 10px;" href="/productCustomer/<%= el.id %>" class="btn btn-primary">Car Detail</a> <br/> <br/>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
</body>
</html>